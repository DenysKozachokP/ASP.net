@model Donation

@{
    ViewData["Title"] = "Деталі пожертви";
}

<h2>Деталі пожертви</h2>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DonationId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DonationId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DonorName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DonorName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Amount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DonationDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DonationDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Comment)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Comment)
        </dd>
        <dt class="col-sm-2">
            Подія
        </dt>
        <dd class="col-sm-10">
            @if (Model.Event != null)
            {
                <a asp-controller="Event" asp-action="Details" asp-route-id="@Model.Event.EventId">
                    @Model.Event.Title
                </a>
            }
            else
            {
                <span>Не вказано</span>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.DonationId" class="btn btn-warning">Редагувати</a>
    <a asp-action="Index" class="btn btn-secondary">Назад до списку</a>
</div>

