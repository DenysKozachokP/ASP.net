@model Donation

@{
    ViewData["Title"] = "Видалити пожертву";
}

<h2>Видалити пожертву</h2>

<h3>Ви впевнені, що хочете видалити цю пожертву?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DonorName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DonorName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Amount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DonationDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DonationDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Comment)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Comment)
        </dd>
        <dt class="col-sm-2">
            Подія
        </dt>
        <dd class="col-sm-10">
            @if (Model.Event != null)
            {
                @Model.Event.Title
            }
            else
            {
                <span>Не вказано</span>
            }
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="DonationId" />
        <input type="submit" value="Видалити" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Скасувати</a>
    </form>
</div>

