@model IEnumerable<Event>

@{
    ViewData["Title"] = "Події";
}

<h2>Список подій</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Створити нову подію</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Назва</th>
            <th>Опис</th>
            <th>Дата</th>
            <th>Місце</th>
            <th>Цільова сума</th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.EventId</td>
                <td>@item.Title</td>
                <td>@(item.Description.Length > 50 ? item.Description.Substring(0, 50) + "..." : item.Description)</td>
                <td>@item.Date.ToString("dd.MM.yyyy")</td>
                <td>@item.Location</td>
                <td>@item.TargetAmount.ToString("C")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.EventId" class="btn btn-info btn-sm">Деталі</a>
                    <a asp-action="Edit" asp-route-id="@item.EventId" class="btn btn-warning btn-sm">Редагувати</a>
                    <a asp-action="Delete" asp-route-id="@item.EventId" class="btn btn-danger btn-sm">Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>

