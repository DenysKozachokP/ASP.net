@model Donation

@{
    ViewData["Title"] = "Створити пожертву";
}

<h2>Створити нову пожертву</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="DonorName" class="control-label">Ім'я донора</label>
                <input asp-for="DonorName" class="form-control" />
                <span asp-validation-for="DonorName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Amount" class="control-label">Сума</label>
                <input asp-for="Amount" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="DonationDate" class="control-label">Дата пожертви</label>
                <input asp-for="DonationDate" class="form-control" type="datetime-local" />
                <span asp-validation-for="DonationDate" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Comment" class="control-label">Коментар</label>
                <textarea asp-for="Comment" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="EventId" class="control-label">Подія</label>
                <select asp-for="EventId" class="form-control" asp-items="ViewBag.EventId">
                    <option value="">-- Оберіть подію --</option>
                </select>
                <span asp-validation-for="EventId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Створити" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Скасувати</a>
            </div>
        </form>
    </div>
</div>

